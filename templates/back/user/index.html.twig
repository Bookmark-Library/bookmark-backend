{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}
	<h1>Liste des utilisateurs</h1>
	<a href="{{ path('app_back_user_new') }}" class="btn btn-success">Créer</a>

	{{ include('_flash_messages.html.twig') }}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Avatar</th>
				<th>Alias</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.avatar }}</td>
					<td>{{ user.alias }}</td>
					<td>
						<a href="{{ path('app_back_user_show', {'id': user.id}) }}" class="btn btn-primary">Voir</a>
						<a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucun élément</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
