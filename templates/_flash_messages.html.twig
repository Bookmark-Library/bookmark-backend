{# read and display all flash messages #}
{% for label, messages in app.flashes %}
	{% for message in messages %}
		<div
			class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
			{#
						            on affiche le HTML brut (raw)
						            mais au pr√©alable on supprime toutes les balises HTML sauf "b"
						            cela permet de supprimer les balises "script" qui autorisent les attaques XSS
						        #}
			{{ message|striptags('<b>')|raw }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
{% endfor %}
